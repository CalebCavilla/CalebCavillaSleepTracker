<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.MainMenuViewController">
   <children>
      <HBox alignment="CENTER" prefHeight="80.0" prefWidth="200.0">
         <children>
            <Button fx:id="dashBoardButton" mnemonicParsing="false" prefHeight="70.0" prefWidth="80.0" text="Dashboard">
            	<HBox.margin>
		        	<Insets left="10.0" />
		        </HBox.margin>
		    </Button>
            <Button fx:id="settingsButton" mnemonicParsing="false" onAction="#switchSettingsView" prefHeight="70.0" prefWidth="80.0" text="Settings">
            	<HBox.margin>
		        	<Insets left="10.0" />
		        </HBox.margin>
		    </Button>
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="80.0" prefWidth="200.0">
         <children>
            <Button fx:id="scheduleButton" mnemonicParsing="false" prefHeight="70.0" prefWidth="80.0" text="Schedule">
            	<HBox.margin>
		        	<Insets left="10.0" />
		        </HBox.margin>
		    </Button>
            <Button fx:id="diaryButton" mnemonicParsing="false" onAction="#switchDiaryView" prefHeight="70.0" prefWidth="80.0" text="Diary">
            	<HBox.margin>
		        	<Insets left="10.0" />
		        </HBox.margin>
		    </Button>
         </children>
      </HBox>
   </children>
</VBox>
